<h1>Burgers!</h1>
<div id="uneaten" class="container">
    <h2>Burgers ready to eat!</h2>
    
    <ul>
        {{#each burgers}} 
        {{#unless devoured}}
        <li data_id={{id}}> {{burger_name}}<button class="burgerbutton" data_id={{id}} type="submit">Devour!</button></li>
        {{/unless}}
        {{/each}}
    </ul>
</div>


<div id="eaten" class="container">
    <h2>Burgers already eaten!</h2>

    <ul>
        {{#each burgers}} 
        {{#if devoured}}
        <li data_id={{id}}> {{burger_name}} </li>
        {{/if}}
         {{/each}}
    </ul>
</div>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burgername" name="name">
    </div>

    <button id="newBurger" type="submit">Add burger</button>
</form>